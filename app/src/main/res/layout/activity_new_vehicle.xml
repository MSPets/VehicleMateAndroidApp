        <EditText
            android:id="@+id/edit_text_vehicle_tank_Battery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/def_margin"
            app:layout_constraintTop_toBottomOf="@id/edit_text_vehicle_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:inputType="numberDecimal"
            android:hint="@string/vehicle_tank_battery_size"
            android:gravity="center"
            >
        </EditText>
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/def_margin"
            app:layout_constraintTop_toBottomOf="@id/edit_text_vehicle_tank_Battery"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal"
            android:checkedButton="@id/radio_button_fossil">
            <RadioButton
                android:id="@+id/radio_button_electric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_electric"
                android:onClick="radioButtonClicked"
                />
            <RadioButton
                android:id="@+id/radio_button_fossil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_fuel"
                android:onClick="radioButtonClicked"
                />
        </RadioGroup>

        <Button
            android:id="@+id/button_submit_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/def_margin"
            app:layout_constraintTop_toBottomOf="@id/radio_group"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/submit"
            android:gravity="center"
            >
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>